{
  "template" : "sflow-*",
  "settings" : {
      "number_of_shards" : 6,
      "number_of_replicas" : 1
  },
  "mappings": {
    "sflow": {
      "properties": {
        "@timestamp": {
          "type": "date",
          "format": "strict_date_optional_time||epoch_millis"
        },
        "sflow_NEWsrcIP": {
          "type": "ip"
        },
        "sflow_NEWdstIP": {
          "type": "ip"
        },
        "sflow_srcIP": {
          "type": "ip"
        },
        "sflow_dstIP": {
          "type": "ip"
        }
      }
    }
  }
}
